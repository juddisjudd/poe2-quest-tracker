{
  "name": "exile-compass",
  "version": "2.0.0",
  "description": "Path of Exile 2 Exile Compass Overlay",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc --watch",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc",
    "electron": "electron .",
    "electron:prod": "cross-env NODE_ENV=production electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish always",
    "clean": "rimraf dist",
    "update-tree": "bun run scripts/update-tree-data.ts"
  },
  "keywords": [
    "path-of-exile",
    "exile-compass",
    "overlay",
    "electron"
  ],
  "author": {
    "name": "juddisjudd",
    "email": "juddisjudd@users.noreply.github.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.2",
    "@types/pako": "^2.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.25",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-select": "^2.2.6",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "pako": "^2.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.10.1"
  },
  "build": {
    "appId": "com.juddisjudd.poe2questtracker",
    "productName": "Exile Compass",
    "directories": {
      "output": "release"
    },
    "files": [
      {
        "from": "dist",
        "to": "dist"
      },
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "data/tree",
        "to": "data/tree",
        "filter": ["*.min.json"]
      },
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "juddisjudd",
        "repo": "poe2-quest-tracker"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "assets/icon.png"
    }
  }
}
